FROM debian:bullseye

# Install NGINX and OpenSSL for TLS
RUN apt-get update && apt-get install -y nginx curl gettext-base && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Create directories for SSL certificates
RUN mkdir -p /etc/nginx/ssl

# Generate a self-signed SSL certificate for testing
RUN openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
    -keyout /etc/nginx/ssl/nginx.key \
    -out /etc/nginx/ssl/nginx.crt \
    -subj "/CN=localhost"

# Copy the Nginx configuration file
COPY ./nginx.conf /etc/nginx/templates/nginx.conf.template

EXPOSE 8443

# Use envsubst to replace environment variables in the template
# and start NGINX
CMD envsubst '$SSL_CERTIFICATE $SSL_CERTIFICATE_KEY' < /etc/nginx/templates/nginx.conf.template > /etc/nginx/nginx.conf && nginx -g 'daemon off;'

## it takes a bit time to the website to load so it would be visible in the browser